<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#d3d3d3"
    android:orientation="vertical"
    tools:context=".ZhongXinLoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zhongxinLMain"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/water"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:id="@+id/zhongxinUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/gerenInfo"
            android:textSize="25dp"
            android:text="个人信息入口"
            android:textColor="#FF4500"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/gerenDingdan"
            android:textSize="25dp"
            android:text="订单列表入口"
            android:textColor="#FF4500"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/gerenPassword"
            android:textSize="25dp"
            android:text="修改密码入口"
            android:textColor="#FF4500"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/gerenFanKui"
            android:textSize="25dp"
            android:text="反馈列表入口"
            android:textColor="#FF4500"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#ff1234"
            android:id="@+id/zhongxinQuitTv"/>
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/start_vp1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_internet"
        android:textColor="#000"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="网络设置"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:id="@+id/start_join"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/yindaolinear"
        android:layout_marginBottom="50dp"
        android:visibility="gone"
        android:text="进入首页"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yindaolinear"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_huadong1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/start_bg2" />

        <TextView
            android:id="@+id/start_huadong2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/start_bg1" />

        <TextView
            android:id="@+id/start_huadong3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/start_bg1" />

        <TextView
            android:id="@+id/start_huadong4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/start_bg1" />

        <TextView
            android:id="@+id/start_huadong5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/start_bg1" />

    </LinearLayout>

</RelativeLayout>
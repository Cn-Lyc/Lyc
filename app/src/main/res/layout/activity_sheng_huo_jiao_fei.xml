<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShengHuoJiaoFeiActivity">

    <RelativeLayout
        android:id="@+id/lifeR1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="生活缴费"
            android:textColor="#000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/lifeCityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="城市名 "
            android:textColor="#000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/lifeBackTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="返回"
            android:textColor="#000"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/lifeLineTv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/lifeR1"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lifeLineTv1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/waterManTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="水费管理"
            android:textColor="#000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/powerManTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="电费管理"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/groupManTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="户号管理"
            android:textColor="#000"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lifeAutoBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="自动缴费" />

        <Button
            android:id="@+id/lifeGroupBt"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="户号管理" />

    </LinearLayout>

</RelativeLayout>